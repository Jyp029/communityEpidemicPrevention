}

.paihangbang {
  display: inline-block;
  font-size: 35rpx;
  color: rgb(214, 66, 66);
  font-weight: 500;
}

.comm_content {
  line-height: 50rpx;
}

.navigator-bottom {
  padding-bottom: 6rpx;

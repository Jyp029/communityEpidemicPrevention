.view-rebang {
  display: inline-block;
  background-color: white;
  line-height: 75rpx;
  text-align: center;
  width: 376rpx;
  height: 75rpx;
  float: left;
  border-bottom: 1px solid rgb(240, 235, 235);
}
.view-tuijian {
  display: inline-block;
  background-color: white;
  line-height: 75rpx;
  text-align: center;
  width: 375rpx;
  height: 75rpx;
  float: right;
  border-bottom: 1px solid rgb(240, 235, 235);
}

.view-rebang:hover {
  background-color: rgb(78, 197, 72);
}

.view-tuijian:hover {
  background-color: rgb(78, 197, 72);
}

navigator {
  height: 195rpx;
  margin: 6rpx 20rpx 25rpx 25rpx;
}

.comm-list {

}

.comm-img {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
  height: 150rpx;
  float: right;
}

image {
  margin-top: 50rpx;
}

.comm_hot {
  display: inline-block;
  margin-left: 6rpx;
  font-size: 35rpx;

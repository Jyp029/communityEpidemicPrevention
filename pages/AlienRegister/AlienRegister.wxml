<view class="sign-padding">8.健康状态：</view>
<view class="weui-cells weui-cells_radio weui-cells_after-title">
	<radio-group bindchange="bindHealthChange">
		<label class="weui-cell weui-check__label" wx:for="{{healthItems}}" wx:key="value">
			<view class="weui-cell__bd">{{item.name}}</view>
			<view class="weui-cell__ft">
				<radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
				<i class="weui-icon-checked"></i>
			</view>
		</label>
	</radio-group>
</view>

<view class="sign-padding">9.地址：</view>
<view class="weui-cells weui-cells_after-title" wx:if="{{isAlien == 0}}">
	<view class="weui-cell weui-cell_active">
		<view class="weui-cell__bd">
			<input bindblur="checkAddressInput" bindinput="addressInput" class="weui-input" placeholder="本社区人员填写门牌号" />
		</view>
	</view>
</view>
<view class="weui-cells weui-cells_after-title" wx:else>
	<view class="weui-cell weui-cell_active">
		<view class="weui-cell__bd">
			<input bindblur="checkAddressInput" bindinput="addressInput" class="weui-input" placeholder="外来人员填写地址,例如：安徽省-阜阳市-颍上区/临泉县" />
		</view>
	</view>
</view>

<view class="loginBtnView">
	<button bindtap="commRegister" class="loginBtn">提交信息登记</button>
</view>
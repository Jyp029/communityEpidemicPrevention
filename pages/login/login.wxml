<!--pages/login/login.wxml-->
<view class="container">
	<view class="login-icon">
		<image class="login-img" src="../../images/login_bg.png"></image>
	</view>
	<view class="login-from">
		<form bindsubmit="formSubmit" class='form'>
			<view class="myno">
				<!-- 身份证号 -->
				<view class="weui-cell weui-cell_input" style="padding: 10px">
					<image class="idCardImage" src="../../images/id_card.png"></image>
					<view class="weui-cell__bd">
						<input class="weui-input" name="card_id" bindinput="cardIdInput" value='{{cardId}}' placeholder="请输入身份证号" />
					</view>
				</view>
			</view>
			<view class="mypwd">
				<!-- 密码 -->
				<view class="weui-cell weui-cell_input" style="padding: 10px">
					<image class="passWordImage" src="../../images/password.png"></image>
					<view class="weui-cell__bd">
						<input class="weui-input" type="password" name="password" bindinput="pwdInput" placeholder="请输入密码" value='{{password}}' style="padding-bottom: 10px" />
					</view>
				</view>
			</view>

				<!--登录按钮-->
				<view class="loginBtnView">
					<button class="loginBtn" size="{{primarySize}}" form-type='submit' disabled='{{disabled}}'>社区人员登录</button>
				</view>

				<!--外来人员注册按钮-->
				<view class="regBtnView">
					<button bindtap="toRegister" class="regBtn" size="{{primarySize}}" disabled='{{disabled}}'>外来人员去登记</button>
				</view>
		</form>

	</view>
</view>
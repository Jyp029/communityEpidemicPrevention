<view wx:if="{{isHide}}">
	<view wx:if="{{canIUse}}">
		<view class='header'>
			<image style="width:500rpx; height:300rpx" src='../../images/login_bg.png'></image>
		</view>

		<view class='content'>
			<view>申请获取以下权限</view>
			<text>获得你的公开信息(昵称，头像等)</text>
		</view>

		<button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
			授权登录
		</button>
	</view>
	<view wx:else>请升级微信版本</view>
</view>

<view wx:else>
	<view class="userinfo">
		<image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
		<text class="userinfo-nickname">{{nickName}}</text>
	</view>

	<view class="hr"></view>

	<view class='item' bindtap="toDataCenter">
		<image src="../../images/data_center.png" class="beforImg"></image>
		<view class="title">数据中心</view>
		<view class="detail2">
			<text>></text>
		</view>
	</view>

	<view class="hr"></view>
	<view class='item' bindtap="toMyQuuestions">
		<image src="../../images/my_questions.png" class="beforImg"></image>
		<view class="title">我的提问</view>
		<view class="detail2">
			<text> ></text>
		</view>
	</view>

	<view class="line"></view>
	<view class="item" bindtap="toMyAnswers">
		<image src="../../images/my_answer.png" class="beforImg"></image>
		<view class="title">我的回答</view>
		<view class="detail2">
			<text> ></text>
		</view>
	</view>

	<view class="line"></view>
	<view class="item" bindtap="toMyCollects">
		<image src="../../images/my_collect.png" class="beforImg"></image>
		<view class="title">我的收藏</view>
		<view class="detail2">
			<text> ></text>
		</view>
	</view>

	<view class="line"></view>
	<view class="item" bindtap="toMyFollowed">
		<image src="../../images/my_followed.png" class="beforImg"></image>
		<view class="title">我的关注</view>
		<view class="detail2">
			<text> ></text>
		</view>
	</view>

	<view class="line"></view>
	<view class="item" bindtap="toMyRespect">
		<image src="../../images/my_respect.png" class="beforImg"></image>
		<view class="title">用户举报</view>
		<view class="detail2">
			<text> ></text>
		</view>
	</view>

	<view class="line"></view>
	<view class="item" bindtap="toFeedback">
		<image src="../../images/feedback.png" class="beforImg"></image>
		<view class="title">意见反馈</view>
		<view class="detail2">
			<text> ></text>
		</view>
	</view>

  <view class="line"></view>
  <view class="item" bindtap="toModifyPwd">
  <image src="../../images/password.png" class="beforImg"></image>
    <view class="title">密码修改</view>
    <view class="detail2">
      <text> ></text>
    </view>
  </view>
  <view class="hr"></view>
</view>

<button bindtap="logout" type="warn">退出</button>